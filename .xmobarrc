Config { font = "xft:Mononoki Nerd Font:pixelsize=13"
       , additionalFonts = [ "xft:FontAwesome:pixelsize=13"]
       , bgColor = "#2E3440"
       , fgColor = "#D8DEE9"
       , alpha = 255 
       , border = NoBorder
       , position = Top
       , lowerOnStart = True
       , persistent = True
       , hideOnStart = False
       , allDesktops = True
       , overrideRedirect = True
       , iconRoot = "."#81A1C1
       , commands = [ Run UnsafeStdinReader 
                    , Run Cpu ["-t", "<fc=#BF616A>Cpu: <total>%</fc>"] 10
                    , Run Memory ["-t", "<fc=#D08770>Mem: <used>/<total>M (<usedratio>%)</fc>"] 10
		    , Run Com "/home/vllblvck/Scripts/arch_updates.sh" [] "arch_updates" 3000
		    , Run Com "/home/vllblvck/Scripts/aur_updates.sh" [] "aur_updates" 3000
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10 ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %UnsafeStdinReader% }{ %cpu%<fc=#A3BE8C> || </fc>%memory%<fc=#A3BE8C> || </fc><fc=#EBCB8B>Arch: %arch_updates%</fc><fc=#A3BE8C> </fc> <fc=#EBCB8B>Aur: %aur_updates%</fc><fc=#A3BE8C> || </fc><fc=#B48EAD>%date%</fc> "
       }
